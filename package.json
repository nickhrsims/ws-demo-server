{
    "name": "ws-demo-server",
    "version": "0.1.0",
    "main": "dist/index.js",
    "repository": "https://github.com/nickhrsims/ws-server-demo",
    "author": "Nicholas H.R. Sims",
    "license": "BSD0",
    "private": true,
    "scripts": {
        "check-types": "tsc",
        "transpile": "yarn babel src -d dist --extensions '.ts'",
        "clean": "/usr/bin/env bash -c 'if [[ -d dist ]]; then rm -r dist; fi'",
        "build": "yarn check-types && yarn clean && yarn transpile",
        "dev": "nodemon -r dotenv/config src/server.ts --extensions '.ts' --exec babel-node --presets @babel/preset-env,@babel/typescript",
        "start": "node -r dotenv/config dist/server.js",
        "test": "jest -c jest.config.js"
    },
    "prettier": {
        "printWidth": 88,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "requirePragma": false,
        "insertPragma": false,
        "proseWrap": "preserve",
        "htmlWhitespaceSensitivity": "css",
        "endOfLine": "lf",
        "embeddedLanguageFormatting": "off"
    },
    "devDependencies": {
        "@babel/node": "^7.14.7",
        "@types/express-ws": "^3.0.1",
        "@types/jest": "^27.5.1",
        "@types/supertest": "^2.0.12",
        "@types/ws": "^8.5.3",
        "jest": "^28.1.0",
        "nodemon": "^2.0.12",
        "supertest": "^6.2.3",
        "ts-jest": "^28.0.2",
        "typescript": "^4.3.4"
    },
    "dependencies": {
        "@babel/cli": "^7.14.5",
        "@babel/core": "^7.14.6",
        "@babel/preset-env": "^7.14.7",
        "@babel/preset-typescript": "^7.14.5",
        "@types/body-parser": "^1.19.0",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.12",
        "@types/morgan": "^1.9.2",
        "@types/node": "^15.12.4",
        "ajv": "^8.11.0",
        "babel-plugin-module-resolver": "^4.1.0",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "^4.17.1",
        "express-ws": "^5.0.2",
        "helmet": "^4.6.0",
        "morgan": "^1.10.0",
        "ws": "^8.8.1"
    }
}
